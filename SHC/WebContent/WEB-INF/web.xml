<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee web-app_2_5.xsd" 
id="WebApp_ID" 
version="2.5">

	<!-- 의미없음 -->
	<display-name>Spring MVC</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- 스프링에서 사용 할 DispatcherServlet서블릿 클래스를 설정하는 소스 -->
	<servlet>
		<!-- Dispatcher 서블릿이름 정의 -->
		<servlet-name>shopping</servlet-name>
		<!-- index.jsp페이지에서 <servlet-name>이 호출되면 실질적으로 불려질 DispactcherServlet -->
		<!-- Spring프레임워크에서 제공하는 DispatcherServet 클래스 정의 -->
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		
		<!-- 큰 의미는 없지만 서블릿이 로드되는 속도 -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<!-- Dispatcher서블릿 이름 정의 -->
		<servlet-name>shopping</servlet-name>
		
		<!-- 확장자명이 .do로 들어오는 요청을 DispatcherServet클래스에서 처리하도록 설정 -->
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<!-- 한글이 깨지지 않도록 필터 설정 -->
	<!-- 스프링에서는 url 요청이 매핑될 시 해당 필터를 처음 거치는데 이 필터를 통과할 때 한글값을 인코딩 해주려면 아래와 같이 한다. -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>EUC-KR</param-value>
		</init-param>
	</filter>
	
	<!-- 해당 필터 네임이 처리하는 작업을 url과 매핑하려면 아래와 같이 한다. -->
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<!-- url패턴정의 아래는 모든 url요청을 의미함 -->
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>